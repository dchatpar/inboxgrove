# InboxGrove Backend Configuration
# Copy this to .env and fill in your actual values

# Application
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/inboxgrove_db
DATABASE_POOL_SIZE=20
DATABASE_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0

# Stripe (get from Stripe dashboard)
STRIPE_API_KEY=sk_live_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Trial Configuration
TRIAL_DAYS=7
TRIAL_INBOX_LIMIT=5
TRIAL_DOMAIN_LIMIT=1

# Subscription Pricing (in cents)
STARTER_PRICE=9700      # $97.00/month
GROWTH_PRICE=29700      # $297.00/month
ENTERPRISE_PRICE=99700  # $997.00/month

# Plan Limits
STARTER_DOMAINS=10
STARTER_INBOXES=50
GROWTH_DOMAINS=50
GROWTH_INBOXES=500
ENTERPRISE_DOMAINS=10000
ENTERPRISE_INBOXES=100000

# Namecheap API (domain registrar)
NAMECHEAP_API_KEY=your_namecheap_api_key
NAMECHEAP_API_USER=your_namecheap_username
NAMECHEAP_SANDBOX=False  # Set to True for testing

# Cloudflare API (DNS management)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# KumoMTA (SMTP server)
KUMO_HTTPS_PORT=8008
KUMO_HOST=localhost
KUMO_USERNAME=admin
KUMO_PASSWORD=your_kumo_password

# Email Service
MAIL_FROM=noreply@inboxgrove.com
MAIL_SMTP_HOST=smtp.sendgrid.net
MAIL_SMTP_PORT=587
MAIL_SMTP_USER=apikey
MAIL_SMTP_PASSWORD=your_sendgrid_api_key
MAIL_TLS=True

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring
SENTRY_DSN=your_sentry_dsn_optional
PROMETHEUS_METRICS_ENABLED=True
REQUEST_LOGGING_ENABLED=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Feature Flags
DOMAIN_PURCHASING_ENABLED=True
AUTO_PROVISIONING_ENABLED=True

# Frontend URL
FRONTEND_URL=http://localhost:3000
